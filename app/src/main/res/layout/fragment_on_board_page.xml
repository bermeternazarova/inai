<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violet"
    android:orientation="vertical"
    tools:context=".OnBoardPageFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_120dp"
        android:contentDescription="@string/images_of_onboard"
        android:src="@drawable/img_welcome" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:text="@string/dear__"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/_24sp" />

</LinearLayout>